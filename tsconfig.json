{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "isolatedModules": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "skipLibCheck": true,
        "stripInternal": true,
        "noImplicitAny": false,
        "types": [
            "meteor-typings",
            "node"
        ],
        "removeComments": false
    },
    "include": [
        "client/**/*",
        "server/**/*",
        "imports/**/*",
        "declaration.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": false
    }
}