{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5",
        "skipLibCheck": true,
        "stripInternal": true,
        "noImplicitAny": false,
        "types": [
            "meteor-typings"
        ]
    },
    "include": [
        "node_modules/**/*.ts",
        "both/**/*.ts",
        "client/**/*.ts",
        "server/**/*.ts",
        "imports/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "atom": {
        "rewriteTsconfig": false
    }
}